{
  "manifest_version": 3,
  "name": "QBrowser",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "dist/background/main.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}